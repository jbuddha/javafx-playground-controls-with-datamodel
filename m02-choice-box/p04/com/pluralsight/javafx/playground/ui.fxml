<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.control.ChoiceBox?>
<?import javafx.scene.control.TextArea?>
<?import javafx.scene.control.ToggleButton?>
<?import javafx.scene.layout.AnchorPane?>
<?import javafx.scene.layout.ColumnConstraints?>
<?import javafx.scene.layout.GridPane?>
<?import javafx.scene.layout.RowConstraints?>
<GridPane hgap="5.0" prefHeight="400.0" prefWidth="600.0" vgap="5.0" xmlns="http://javafx.com/javafx/8.0.111" xmlns:fx="http://javafx.com/fxml/1" fx:controller="com.pluralsight.javafx.playground.Controller">
    <columnConstraints>
        <ColumnConstraints hgrow="SOMETIMES" minWidth="10.0" prefWidth="100.0" />
        <ColumnConstraints hgrow="SOMETIMES" minWidth="10.0" prefWidth="100.0" />
    </columnConstraints>
    <rowConstraints>
        <RowConstraints minHeight="10.0" prefHeight="30.0" vgrow="SOMETIMES" />
    </rowConstraints>
    <children>
        <TextArea fx:id="log" prefHeight="373.0" prefWidth="289.0" GridPane.columnIndex="1" />
        <AnchorPane fx:id="pane" prefHeight="200.0" prefWidth="200.0">
            <children>
                <ChoiceBox fx:id="choiceBox" layoutX="14.0" layoutY="24.0" onAction="#onAction" prefWidth="150.0" />
                <ToggleButton layoutX="106.0" layoutY="148.0" fx:id="toggle" text="Toggle Visibility" />
                <Button fx:id="adder" layoutX="106.0" layoutY="178.0" text="Add Item" onAction="#addItem"/>
            </children>
        </AnchorPane>
    </children>
    <padding>
        <Insets bottom="10.0" left="10.0" right="10.0" top="10.0" />
    </padding>
</GridPane>
